<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/reg_email"
            android:hint="gmail"
            app:layout_constraintStart_toStartOf="@+id/reg_pwd"
            app:layout_constraintEnd_toEndOf="@+id/reg_pwd" app:layout_constraintTop_toBottomOf="@+id/reg_pwd"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/reg_pwd"
            android:hint="password"
            app:layout_constraintStart_toStartOf="@+id/reg_uname"
            app:layout_constraintEnd_toEndOf="@+id/reg_uname" app:layout_constraintTop_toBottomOf="@+id/reg_uname"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/reg_uname"
            android:hint="username" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="241dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/reg_email" app:layout_constraintStart_toStartOf="@+id/reg_email"
            app:layout_constraintEnd_toEndOf="@+id/reg_email"
            app:layout_constraintHorizontal_bias="0.496"/>

</androidx.constraintlayout.widget.ConstraintLayout>